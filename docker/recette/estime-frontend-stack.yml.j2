version: '3.8'

services:
  estime-frontend:
    image: registry.beta.pole-emploi.fr/estime/estime-frontend:release-candidate
    environment:
      PE_CONNECT_CLIENT_ID: "{{ PE_CONNECT_CLIENT_ID }}"
      PE_CONNECT_REDIRECT_URI: "{{ PE_CONNECT_REDIRECT_URI }}"
      PE_CONNECT_SCOPE: "{{ PE_CONNECT_SCOPE }}"
      PE_CONNECT_IDENTITY_SERVER_URL: "{{ PE_CONNECT_IDENTITY_SERVER_URL }}"
      TAG_COMMANDER_SCRIPT_URL: "{{ TAG_COMMANDER_SCRIPT_URL }}"
      TZ: "Europe/Paris"
    networks:
     - estime
    healthcheck:
      test: ["CMD", "curl -f http://estime-frontend:8888  || exit 1"]
      timeout: 30s
      interval: 1m
      retries: 3
    ports:
      - 80:8888
    deploy:
      replicas: 2
      resources:
        reservations:
          cpus: '0.05'
          memory: 128Mi
        limits:
          cpus: '0.10'
          memory: 256Mi
      update_config:
        parallelism: 1
        failure_action: rollback
        delay: 5s
      restart_policy:
        condition: on-failure

networks:
  estime:
    external: true
    name: estime
